{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["esnext", "dom"],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "target": "esnext",
    "types": ["node"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    // TSUP issue https://github.com/egoist/tsup/issues/571
    // "composite": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
